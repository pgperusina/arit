<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.fxmisc.richtext.CodeArea?>

<AnchorPane fx:id="AnchorPane" prefHeight="950" prefWidth="1300" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aritUI.Controller">
    <children>
      <VBox layoutX="13.0" layoutY="6.0" prefHeight="950" prefWidth="1300">
         <MenuBar>
           <menus>
             <Menu mnemonicParsing="false" text="Archivo">
               <items>
                 <MenuItem fx:id="menuAbrir" mnemonicParsing="false" text="Abrir" />
                 <MenuItem fx:id="menuGuardar" mnemonicParsing="false" text="Guardar" />
                 <MenuItem fx:id="menuGuardarComo" mnemonicParsing="false" text="Guardar Como" />
               </items>
             </Menu>
             <Menu mnemonicParsing="false" text="Ayuda">
               <items>
                 <MenuItem fx:id="menuCodigoFuente" mnemonicParsing="false" onAction="#abrirGitHub" text="Acerca De">
                 </MenuItem>
               </items>
             </Menu>
           </menus>
         </MenuBar>
         <HBox fillHeight="true" prefHeight="100.0" prefWidth="200.0" spacing="10">
            <children>
                <VBox>
                    <Button fx:id="botonEjecutar" mnemonicParsing="false" onAction="#Ejecutar" prefHeight="52.0" prefWidth="250" text="Ejecutar Archivo (Descendente)" />
                    <Button fx:id="botonEjecutarAscendente" mnemonicParsing="false" onAction="#EjecutarAscendente" prefHeight="52.0" prefWidth="250" text="Ejecutar Archivo (Ascendente)" />
                </VBox>

               <Button mnemonicParsing="false" onAction="#reporteErrores" prefHeight="100.0" prefWidth="250" text="Reporte de Errores" />
               <Button mnemonicParsing="false" onAction="#reporteTS" prefHeight="100.0" prefWidth="250" text="Reporte de Tabla de Símbolos" />
               <Button mnemonicParsing="false" onAction="#abrirArbol" prefHeight="100.0" prefWidth="250" text="Reporte de AST" />
               <Button mnemonicParsing="false" onAction="#reportGraficas" prefHeight="100.0" prefWidth="249.0" text="Mostrar Gráficas" />
            </children></HBox>
          <HBox fillHeight="true" layoutX="22.0" layoutY="84.0" prefHeight="801.0" prefWidth="1300.0" spacing="30">
              <CodeArea fx:id="archivo" lineHighlighterOn="true" prefHeight="801.0" prefWidth="637.0" wrapText="true" />
              <TextArea fx:id="consola" editable="false" layoutX="620.0" layoutY="113.0" prefHeight="801.0" prefWidth="621.0" style="-fx-font-weight: bold; -fx-text-fill:white; -fx-font-size: 14; -fx-control-inner-background: black;" wrapText="true" />
          </HBox>
      </VBox>
    </children>
</AnchorPane>
